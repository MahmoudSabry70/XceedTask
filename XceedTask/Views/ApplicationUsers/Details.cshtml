@model ApplicationUser

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    var lang = HttpContextAccessor.HttpContext?.Request.Cookies["lang"] ?? "En";
    ViewData["Title"] = (lang == "En" ? "Profile" : "الملف الشخصي");

}
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-4">
            <div class="card">
                <div class="card-body" style="height: 23.5rem;">
                    <div class="profile-details text-center">
                        <img src="@Model.UserImgUrl" alt="" style="    max-width: 50%;"
                             class="img-fluid img-90 rounded-circle blur-up lazyloaded">
                        <h5 class="f-w-600 mb-0">@Model.FullName</h5>
                        <span>@Model.Email</span>

                    </div>
                    <hr>

                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <div class="card tab2-card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-material" id="top-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="top-profile-tab"
                               data-bs-toggle="tab" href="#top-profile" role="tab"
                               aria-controls="top-profile" aria-selected="true">
                                <i data-feather="user"
                                   class="me-2"></i>@((lang == "En" ? "Profile" : "الملف الشخصي"))
                            </a>
                        </li>

                    </ul>
                    <div class="tab-content" id="top-tabContent" style="margin-top: 2rem;">
                        <div class="tab-pane fade show active" id="top-profile" role="tabpanel"
                             aria-labelledby="top-profile-tab">
                            <h5 class="f-w-600">@((lang == "En" ? "Profile" : "الملف الشخصي"))</h5>
                            <div class="table-responsive profile-table">
                                <table class="table table-borderless">
                                    <tbody>
                                        <tr>
                                            <td>@((lang == "En" ? "Full Name" : "الاسم بالكامل")):</td>
                                            <td>@Model.FullName</td>
                                        </tr>

                                        <tr>
                                            <td>@((lang == "En" ? "Email" : "البريد الالكتروني")):</td>
                                            <td>@Model.Email</td>
                                        </tr>

                                        <tr>
                                            <td>@((lang == "En" ? "Mobile Number" : "رقم الهاتف")):</td>
                                            <td>@Model.PhoneNumber</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div style="display: flex; justify-content: space-between; margin-top: 2rem;">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">@((lang == "En" ? "Edit" : "تعديل"))</a>
                            <a asp-action="Index" class="btn btn-secondary">@((lang == "En" ? "Back to List" : "العودة للقائمة"))</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



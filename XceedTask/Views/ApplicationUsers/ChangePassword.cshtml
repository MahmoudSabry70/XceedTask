@model ChangePasswordAdminViewModel
@{
    var lang = HttpContextAccessor.HttpContext?.Request.Cookies["lang"] ?? "En";
    ViewData["Title"] = (lang == "En") ? "Change Password" : "تغيير كلمة السر";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-xl-8">
        <div class="card m-b-20">
            <div class="card-header">
                <h3 class="card-title">@((lang == "En") ? "Change Password" : "تغيير كلمة السر") </h3>
            </div>
            <div class="card-body mb-0">
                <form class="form-horizontal" asp-action="ChangePassword" enctype="multipart/form-data" runat="server">
                    <div asp-validation-summary="All" style="margin-bottom: 2rem; text-align: center;" class="text-danger"></div>

                    <input type="hidden" asp-for="UserId" />

                    <div class="form-group ">
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-label" asp-for="FullName">@((lang == "En" ? "Full Name" : "الاسم بالكامل"))</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="FullName" class="form-control" id="examplenameIne3" placeholder="@((lang == "En" ? "Full Name" : "الاسم بالكامل"))" readonly="">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-label" asp-for="Email">@((lang == "En" ? "Email" : "البريد الالكتروني"))</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Email" class="form-control" id="exampl" readonly="" placeholder="@(lang == "En" ? "Email" : "الأميل")">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-label" asp-for="PhoneNumber">@((lang == "En" ? "Phone Number" : "رقم الهاتف"))</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="PhoneNumber" class="form-control" id="examplenameI3" placeholder="@(lang == "En" ? "Phone Number" : "رقم الهاتف")" readonly="">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="form-group ">
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-label" asp-for="Password">@((lang == "En" ? "Password" : "كلمة السر"))</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Password" class="form-control" id="examplutname3" placeholder="@(lang == "En" ? "Password" : "كلمة السر")">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group ">
                        <div class="row">
                            <div class="col-md-3">
                                <label class="form-label" asp-for="ConfirmPassword">@((lang == "En" ? "Confirm Password" : "تأكيد كلمة السر"))</label>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="ConfirmPassword" class="form-control" id="examplee3" placeholder="@(lang == "En" ? "Confirm Password" : "تأكيد كلمة السر")">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-0 row justify-content-end" style="margin-top: 2rem;">
                        <div class="col-md-9" style="display: flex;justify-content: space-between;">
                            <input type="submit" value="@((lang == "En") ? "Change Password" : "تغيير كلمة السر")" class="btn btn-primary waves-effect waves-light">
                            <a asp-action="Index" class="btn btn-secondary">@((lang == "En" ? "Back to List" : "العودة للقائمة"))</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("DashboardPartials/_ValidationScriptsPartial");
    }
}


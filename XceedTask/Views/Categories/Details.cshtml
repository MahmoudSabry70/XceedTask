@model Category

@{
    var lang = HttpContextAccessor.HttpContext?.Request.Cookies["lang"] ?? "En";
    ViewData["Title"] = (lang == "En") ? "Details" : "التفاصيل";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row">
    <div class="col-xl-8">
        <div class="card m-b-20">
            <div class="card-header">
                <h3 class="card-title"> @((lang == "En") ? "Details" : "التفاصيل")  </h3>
            </div>
            <div class="card-body mb-0">

                <dl class="row">
                    <dt class="col-sm-2">
                        @(lang == "En" ? "Name" : "اسم")
                    </dt>
                    <dd class="col-sm-10">
                        @Model.Name
                    </dd>
                    <dt class="col-sm-2">
                        @(lang == "En" ? "Name (Arabic)" : "الاسم (بالعربي)")
                    </dt>
                    <dd class="col-sm-10">
                        @Model.NameAr
                    </dd>
                  
                   
                </dl>


            </div>

        </div>
        <div style="margin-bottom: 4rem;text-align: end;">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">تعديل</a>
            <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
        </div>
    </div>
</div>

